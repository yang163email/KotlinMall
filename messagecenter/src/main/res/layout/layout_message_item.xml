<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@drawable/border_bottom"
    android:paddingBottom="@dimen/common_padding_middle"
    android:paddingLeft="@dimen/common_padding"
    android:paddingRight="@dimen/common_padding"
    android:paddingTop="@dimen/common_padding_middle">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mIvMsgIcon"
        android:layout_width="@dimen/msg_icon_width"
        android:layout_height="@dimen/msg_icon_height"
        android:src="@drawable/default_loading" />

    <TextView
        android:id="@+id/mTvMsgTitle"
        style="@style/WrapWrap"
        android:layout_marginLeft="@dimen/common_margin_middle"
        android:layout_toRightOf="@id/mIvMsgIcon"
        android:textColor="@color/text_light_dark"
        android:textSize="@dimen/text_big_size" />

    <TextView
        android:id="@+id/mTvMsgContent"
        style="@style/WrapWrap"
        android:layout_alignLeft="@id/mTvMsgTitle"
        android:layout_below="@id/mTvMsgTitle"
        android:layout_marginTop="@dimen/common_margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_normal" />

    <TextView
        android:id="@+id/mTvMsgTime"
        style="@style/WrapWrap"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_small_size" />
</RelativeLayout>
